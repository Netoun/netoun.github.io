---
import type { HTMLAttributes } from "astro/types"

interface Props extends HTMLAttributes<"a"> {
  href: string
}

const { href, ...props } = Astro.props
---

<a
  class='font-medium text-primary underline hover:text-primary/80'
  href={href}
  target='_blank'
  rel='noopener noreferrer'
  {...props}
>
  <slot />
</a>
