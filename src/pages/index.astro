---
import Layout from "../layouts/Layout.astro"
import Input from "@components/atoms/Input.astro"
import Section from "@components/atoms/Section.astro"
import { Send } from "lucide-react"
import Me from "@components/draws/Me.astro"
import Button from "@components/atoms/Button.astro"
import HistoryItem from "@components/HistoryItem.astro"
---

<Layout title='Netoun'>
  <Section
    class='relative min-h-screen h-fit flex flex-col items-center shadow-xl justify-center gap-6 py-[calc(var(--height-header))] md:py-[calc(var(--height-header)*2)]'
  >
    <div class='absolute inset-0 z-[-1]'>
      <picture class='h-full dark:hidden'>
        <img
          sizes='(max-width: 7200px) 40vw, 2880px'
          srcset='
            /images/hero/bg_light_dswwhf_c_scale,w_480.webp 480w,
            /images/hero/bg_light_dswwhf_c_scale,w_1824.webp 1824w,
            /images/hero/bg_light_dswwhf_c_scale,w_2636.webp 2636w,
            /images/hero/bg_light_dswwhf_c_scale,w_2880.webp 2880w'
          src='/images/hero/bg_light_dswwhf_c_scale,w_2880.webp'
          alt=''
          class='w-full h-full object-cover'
        />
      </picture>

      <picture class='h-full hidden dark:block'>
        <img
          sizes='(max-width: 2880px) 100vw, 2880px'
          srcset='
            /images/hero/bg_dark_torlt3_c_scale,w_1200.webp 1200w,
            /images/hero/bg_dark_torlt3_c_scale,w_1883.webp 1883w,
            /images/hero/bg_dark_torlt3_c_scale,w_2521.webp 2521w,
            /images/hero/bg_dark_torlt3_c_scale,w_2880.webp 2880w'
          src='/images/hero/bg_dark_torlt3_c_scale,w_2880.webp'
          alt=''
          class='w-full h-full object-cover'
        />
      </picture>
    </div>
    <div class='mt-16 relative z-10 flex flex-col items-center'>
      <h1
        class='text-4xl md:text-5xl font-title max-w-[12ch] sm:max-w-[24ch] text-center md:leading-tight'
      >
        <strong>Welcome 👋</strong>
         to my
        <strong
          class='text-secondary relative z-10 after:bg-primary after:absolute after:rounded-md after:skew-x-12 hover:after:-skew-x-12 after:z-[-1] after:-inset-[2px] after:duration-200 after:-top-2 after:right-3 px-2'
        >
          Personal
        </strong> 👨‍💻 website 🌐
      </h1>
      <div class='relative mt-16 flex justify-center'>
        <Me />
      </div>
      <div class='mt-16 text-center text-xl'>
        <p>
          I'm a <strong>Front End Developer</strong> from <strong>Nantes</strong
          >
           🇫🇷
        </p>

        <div class='mt-2 flex gap-2 flex-wrap items-center justify-center'>
          I am working actually at
          <div class='ml-1 flex items-center justify-center gap-2'>
            <Input placeholder='Insert your company' />
            <Button>
              <span class='sr-only'>Send</span>
              <Send />
            </Button>
          </div>
        </div>
      </div>
    </div>
  </Section>
